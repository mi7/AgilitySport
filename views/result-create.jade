extends layout

block content
  h1.col-sm-7.text-center Create result collection
  .row
    .col-sm-7
      .form-horizontal
        .form-group
          label(for="competition").col-lg-3.control-label Competition
          .col-lg-9
            input(type="text",id="competition",placeholder="Enter the name of the competition").form-control
        .form-group
          label(for="dogClass").col-lg-3.control-label Class
          .col-lg-9
            input(type="text",id="dogClass",placeholder="Enter the name of the class e.g. J1").form-control
        .form-group
          label(for="dogSize").col-lg-3.control-label Dog size
          .col-lg-9
            select(id="dogSize").form-control
              option Small
              option Medium
              option Large
        .form-group
          label(for="courseLegth").col-lg-3.control-label Course length
          .col-lg-9
            input(type="text",id="courseLegth",placeholder="Enter the length of the course in meters e.g. 131").form-control
        .form-group
          label(for="courseTime").col-lg-3.control-label Course time
          .col-lg-9
            input(type="text",id="courseTime",placeholder="Enter the standard time of the course in seconds e.g. 50").form-control
        .form-group
          label(for="judge").col-lg-3.control-label Judge
          .col-lg-9
            input(type="text",id="judge",placeholder="Enter full name of the judge e.g. John Smith").form-control
         .form-group
           .col-offset-3.col-lg-9
            button(type="submit").btn.btn-primary Save & add results
    .col-sm-5
      .bs-callout.bs-callout-danger
        h4 Qwerty
        p Lorem ipsum
  h2.col-sm-7.text-center Add result
  .row
    .col-sm-7
      table.table.table-striped
        tr
          th #
          th Name
          th Dog
          th
          th Course faults
          th Time
        each i in [1,2,3,4,5]
          tr
            td= i
            td Rikke Wriedt
            td Zap
            td DKK 00083/2013
            td 0
            td 54.34
      .form-horizontal
        .form-group
          label(for="dogName").col-lg-3.control-label Dog name
          .col-lg-9
            input(type="text",id="dogName",placeholder="The name of dog").form-control
        .form-group
          label(for="dogRegistrationNumber").col-lg-3.control-label Registration number
          .col-lg-9
            input(type="text",id="dogRegistrationNumber",placeholder="Enter the registration number of the dog e.g. DKK 00083/2013").form-control
        .form-group
          label(for="name").col-lg-3.control-label Competitor name
          .col-lg-9
            input(type="text",id="competitorName",placeholder="Enter the name of the competitor").form-control
        .form-group
          label(for="courseFaults").col-lg-3.control-label Course faults
          .col-lg-9
            input(type="text",id="courseFaults",placeholder="Enter number of course faults").form-control
        .form-group
          label(for="time").col-lg-3.control-label Time
          .col-lg-9
            input(type="text",id="time",placeholder="The time it took for dog to complete the course in seconds e.g. 47.35").form-control
        .form-group
          .col-offset-3.col-lg-9
            .checkbox
              label
                input(type="checkbox",id="disqualified")
                span Disqualified
         .form-group
           .col-offset-3.col-lg-9
            button(type="submit").btn.btn-primary Add result
    .col-sm-5
      .bs-callout.bs-callout-danger
        h4 Qwerty
        p Lorem ipsum